<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.TtsAnalyseActivity">

        <EditText
            android:id="@+id/edit_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bg_edit_text"
            android:gravity="top"
            android:minLines="5"
            android:padding="5dp"
            android:text="HUAWEI Machine Learning Kit"
            android:textSize="14sp"
            tools:layout_editor_absoluteY="47dp" />
        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/edit_input"
            android:layout_alignEnd="@id/edit_input"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:src="@mipmap/close" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edit_text"
            android:layout_below="@+id/edit_input"
            android:gravity="top"
            android:minLines="5"
            android:padding="5dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_speak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_below="@+id/textView"
            android:background="@drawable/bg_tts_btn"
            android:textColor="@color/white"
            android:text="startSpeak" />

        <Button
            android:id="@+id/btn_stop_speak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:layout_below="@+id/btn_speak"
            android:background="@drawable/bg_tts_btn"
            android:text="stopSpeak" />
</RelativeLayout>